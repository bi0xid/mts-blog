@import 'nib'

@import '../plugins/spinner.css'
@import '../theme-assets/includes/base.styl'
@import '../node_modules/datatables.net-dt/css/jquery.dataTables.css'

#facebook_posts_stats_update
	position relative

	.individual_updated
		margin 30px 0
		flex-vertical()

		li
			margin auto

			for x, c in $socials
				&.{x}
					background-color $socials_colors[c]

				&.{x}:hover
						background-color lightness($socials_colors[c], 60%)

			a
				color #FFF
				display block
				cursor pointer
				padding 10px 20px
				text-decoration none

	#update_all
		border 0
		padding 0
		width 80%
		color #FFF
		height 50px
		display block
		font-size 20px
		cursor pointer
		margin 15px auto
		text-align center
		box-sizing border-box
		background-color #71C263
		text-transform uppercase
		transition background-color .3s

		&:focus
			outline-color lightness(#71C263, 70%)

		&:hover
			background-color lightness(#71C263, 70%)

	#table_wrapper
		margin-top 30px
		padding-right 15px

		td
			text-align center

	.loading-background
		opacity 0
		width 100%
		height 100%
		fixed top 0 left 0
		pointer-events none
		transition opacity .3s
		background-color rgba(71, 69, 69, 0.81)

		.spinner-css
			absolute top 50% left 50%
			transform translate(-50%, -50%)

			> div
				background-color #FFF

		&.in
			opacity 1
			pointer-events all
