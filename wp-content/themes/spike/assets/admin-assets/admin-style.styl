@import 'nib'

@import '../plugins/spinner.css'

#facebook_posts_stats_update
	position relative
	
	.loading-background
		opacity 0
		width 100%
		height 100%
		fixed top 0 left 0
		pointer-events none
		transition opacity .3s
		background-color rgba(71, 69, 69, 0.81)

		.spinner-css
			absolute top 50% left 50%
			transform translate(-50%, -50%)

			> div
				background-color #FFF

		&.in
			opacity 1
			pointer-events all
