@import 'nib'

@import './plugins/react.css'
@import './includes/base.styl'

#reactshare-button, #new-shop-link
	width 50%
	height 50px

#new-shop-link
	display none
	z-index 200
	font-size 15px
	transition all .3s
	fixed bottom 0 left 0
	background color-amarillo

	@media(max-width: 480px)
		display block

	&.opened
		width 100%

	span
		color #000
		width 100%
		font-weight bold
		text-align center
		text-transform uppercase
		absolute top 50% left 50%
		transform translate(-50%, -50%)

.react-and-link
	opacity 1
	transition opacity .1s

	&.out
		opacity 0

#reactshare-button
	right 0
	bottom 0
	padding 0
	background color-base

	&:after
		width 1px
		height 30px
		background #FFF
		absolute top 50% left 50%
		transform translate(-50%, -50%)

	&.opened
		width 100%
		bottom 50px
		box-shadow none

		&:after
			display none

	.opinion-functions
		span, a
			width 25%

	.share-functions
		width 100%
		padding-left 0px
		text-align center

		a, #share-funct-mail
			width 25%
			float initial
			display inline-block

	.rs-react, .rs-share
		top 50%
		float initial
		font-size 15px
		font-weight bold
		position absolute
		transform translate(0,-50%)

	.rs-react
		right 5%
		margin-right 15px

	.rs-share
		left 5%
		border none
		margin-left 15px

	@media(max-width: 390px)
		.rs-react
			right 0px

		.rs-share
			left 0px

	@media(max-width: 300px)
		.rs-react
			margin-right 10px

		.rs-share
			margin-left 10px
