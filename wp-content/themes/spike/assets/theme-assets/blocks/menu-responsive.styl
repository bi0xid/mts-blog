#mobile-navigation
	display none

#navigation select
	display none !important

#logo a
	width 200px
	height 60px
	margin 10px 0
	background-size cover
	background-repeat no-repeat
	image '../images/png-logo/mts-full-brand-01.png' 200px 60px

@media(max-width: 480px)
	#logo
		display none !important

	#mobile-navigation
		display block

	.main-container
		padding-top 57px

	#searchform
		text-align center
		transition top .3s
		padding 10px !important
		absolute top -100px left 0
		background rgb(224, 224, 224)

		input[type="text"]
			border none
			height 100%
			float initial

		#search-image
			display none

		&.in
			top 0

#mobile-navigation
	width 100%
	height 57px
	background color-base
	absolute top 0 left 0

	.search-toggler, .toggler
		width 35px
		height 35px
		z-index 200
		background-size cover

	.search-toggler
		absolute top 12px right 12px
		background-image url('../images/png-icons/search-01-ff.png')

	.toggler
		absolute top 12px left 12px
		background-image url('../images/png-icons/menu-01-ff.png')

	.responsive-logo
		width 150px
		height 20px
		background-size contain
		absolute top 50% left 50%
		background-repeat no-repeat
		transform translate(-50%,-50%)
		background-position center center
		image '../images/png-logo/logo-mobile.png' 150px 20px

	.menu-wrapper
		opacity 0
		width 100%
		z-index 200
		overflow hidden
		transition all .5s
		pointer-events none
		background color-menu
		absolute top 57px left 0

		li
			padding 2px 0

			a
				color #FFF
				margin 0 15px
				padding 5px 0
				display block
				text-align center

			&:not(:last-child) a
				border-bottom 1px solid grey

	&.in
		.menu-wrapper
			opacity 1
			pointer-events initial

		.toggler
			background-image url('../images/png-icons/close-ff-01.png')
