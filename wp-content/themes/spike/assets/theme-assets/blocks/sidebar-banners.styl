.loveschool-banner
	clear both
	list-style none
	min-height 350px
	position relative
	margin-bottom 27px
	background-size cover
	box-sizing border-box
	background-position 10% 25%
	background-repeat no-repeat
	background-image url("http://mytinysecrets.com/wp-content/uploads/2016/12/Pasted-image-at-2016_12_08-09_26-AM.png")

	@media(max-width 720px)
		margin 0 10px 26px 10px

	a
		width 100%
		height 100%
		absolute top 0 left 0

		.text
			width 100%
			padding 10px
			box-sizing border-box
			absolute bottom 0 left 0
			transition background-color .3s
			background-color rgba(0, 0, 0, 0.55)

			p
				margin 0
				color #FFF
				font-size 16px
				margin-bottom 5px
				transition color .3s

				&:first-child
					text-decoration underline

		&:hover
			.text
				background-color rgba(0, 0, 0, 0.65)

				p
					color #F5F5F5
