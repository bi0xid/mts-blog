.loveschool-banner
	clear both
	list-style none
	min-height 350px
	position relative
	margin-bottom 27px
	background-size cover
	box-sizing border-box
	background-repeat no-repeat

	@media(max-width 720px)
		margin 0 10px 26px 10px

	a
		width 100%
		height 100%
		absolute top 0 left 0

		.text
			width 100%
			padding 10px
			box-sizing border-box
			absolute bottom 0 left 0
			transition background-color .3s
			background-color rgba(0, 0, 0, 0.55)

			&.with-alert
				bottom 50px

				@media(max-width 950px)
					bottom 70px

				@media(max-width 720px)
					bottom 30px

				@media(max-width 520px)
					bottom 50px

			p
				margin 0
				color #FFF
				font-size 16px
				margin-bottom 5px
				text-align center
				transition color .3s

				&:last-child
					margin 0

				&.underline
					text-decoration underline

		.alert
			width 100%
			color #FFF
			padding 5px
			text-align center
			box-sizing border-box
			absolute bottom 0 left 0
			background-color #FF806C
			transition background-color .3s

			p
				margin 0
				font-size 17px

		&:hover
			.alert
				background-color #f2634d

			.text
				background-color rgba(0, 0, 0, 0.65)

				p
					color #F5F5F5

	&.arls
		background-position 10% 25%
		background-image url("http://mytinysecrets.com/wp-content/uploads/2016/12/Pasted-image-at-2016_12_08-09_26-AM.png")

	&.ppc
		background-position 75% center
		background-image url("http://mytinysecrets.com/wp-content/uploads/2016/12/Screen-Shot-2016-06-05-at-12.10.35-PM.png")
