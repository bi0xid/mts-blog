.loveschool-banner
	clear both
	float left
	list-style none
	min-height 350px
	position relative
	margin-bottom 27px
	background-size cover
	box-sizing border-box
	background-position 10% 25%
	background-repeat no-repeat
	background-image url("http://mytinysecrets.com/wp-content/uploads/2016/12/Pasted-image-at-2016_12_08-09_26-AM.png")

	a
		width 100%
		height 100%
		absolute top 0 left 0

		.text
			width 100%
			padding 10px
			box-sizing border-box
			absolute bottom 0 left 0
			background rgba(0, 0, 0, 0.41)

			p
				margin 0
				color #FFF
				font-size 16px
				margin-bottom 5px

				&:first-child
					text-decoration underline
