#form-sign-up
	text-align center

	h1
		font-size 30px

	*
		font-family 'Asap'
		box-sizing border-box

	.header
		padding 0 40px 0 40px

		em
			margin 0 auto
			display block
			max-width 600px

		h5
			font-size 20px

		ul
			padding 0
			margin 0 auto
			max-width 500px

		.img-wrapper
			margin 20px 0
			text-align center

			img
				max-width 200px

			&.small
				img
					max-width 120px

	#existing_email
		color #297706
		font-size 20px

	#subscribe_form_wrapper
		width 50%
		margin 40px auto 40px auto

		input
			width 100%
			height 54px
			color #4E4E4E
			font-size 24px
			margin-bottom 5%
			padding 0px 10px
			border 3px solid rgb(236, 240, 242)
			background-color rgb(255, 255, 255)

		.subscribe_button
			border 0
			width 50%
			color #FFF
			height 40px
			cursor pointer
			font-size 20px
			transition background-color .3s
			background-color rgb(169, 80, 122)

			&:hover
				background-color lightness(rgb(169, 80, 122), 60%)

		@media(max-width 600px)
			width 90%
			margin-top 20px

			.subscribe_button
				width 100%

#form-sign-up-thanks
	padding 40px

	.intro-img
		text-align center
		margin-bottom 40px

		@media(max-width 800px)
			margin-bottom 40px

			img
				max-width 90%

	*
		font-family 'Asap'
		box-sizing border-box

	h1
		margin-top 0
		font-size 40px
		text-align center

	ul
		list-style-type decimal

	.btn
		border 0
		color #FFF
		width 250px
		padding 10px
		display block
		font-size 21px
		margin 10px auto
		text-align center
		text-decoration none
		transition background-color .3s
		background-color rgb(169, 80, 122)

		@media(max-width 400px)
			width 90%

		&:hover
			background-color lightness(rgb(169, 80, 122), 60%)
